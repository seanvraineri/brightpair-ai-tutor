# BrightPair AI Tutor Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration (Required)
VITE_SUPABASE_URL=your-supabase-project-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# OpenAI Configuration (Required for AI features)
VITE_OPENAI_API_KEY=your-openai-api-key
VITE_OPENAI_API_URL=https://api.openai.com/v1

# Feature Flags
VITE_USE_EDGE_FUNCTIONS=true  # Use Supabase Edge Functions (recommended for production)
VITE_USE_MOCK_DATA=false      # Use mock data for development
VITE_SAVE_LESSONS=true        # Save generated lessons to database

# Optional: Development Settings
# VITE_API_RETRY_ATTEMPTS=3
# VITE_API_RETRY_DELAY=1000
